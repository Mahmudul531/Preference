<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
 android:layout_height="100sp"
  android:orientation="vertical"
  android:background="@drawable/listview_border_more"
  >
   
      <LinearLayout  
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"  
  android:id="@+id/layoutSimple"
  >
   </LinearLayout>
    <TextView android:textSize="18sp" 
        android:textColor="#ffffff"  
        android:paddingTop="8sp"  
        android:textStyle="bold"
        android:layout_below="@+id/layoutSimple"    
        android:layout_width="fill_parent"
          android:layout_height="wrap_content" android:id="@+id/textViewHighCenter" android:text="TextView"></TextView>

    <TextView
        android:id="@+id/textViewdialogDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_alignLeft="@+id/textViewHighCenter"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewdialogTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingRight="10sp"
        android:layout_below="@+id/textViewdialogDate"
        android:gravity="right"
        android:text="TextView" />
   
</RelativeLayout>
